[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    .mypy_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    examples/*:S101
max-complexity = 10
select = C,E,F,W,B,B950
ignore = E203,W503
show-source = True
statistics = True
count = True
